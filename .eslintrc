{
  "extends": "airbnb",
  "rules" :{
    "object-shorthand": ["error", "consistent"],
    "no-else-return": ["off"],
    "no-plusplus": ["off"],
    "arrow-body-style": ["off"],
    "prefer-promise-reject-errors": ["off"],
    "no-underscore-dangle": ["off"],
    "no-unused-vars": ["error", { "argsIgnorePattern": "next|res|req" }]
  },
  "env": {
    "node": true,
    "jest": true,
    "mocha": true
  }
}
